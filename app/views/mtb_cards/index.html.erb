    <th></th>
  </tr>

<% @mtb_cards.each do |mtb_card| %>
  <tr>
    <td><%= mtb_card.name %></td>
    <td><%= mtb_card.jname %></td>
    <td><%= mtb_card.text %></td>
    <td><%= mtb_card.cost %></td>
    <td><%= mtb_card.need_pot %></td>
    <td><%= mtb_card.coin %></td>
    <td><%= mtb_card.victory %></td>
    <td><%= mtb_card.card %></td>
    <td><%= mtb_card.action %></td>
    <td><%= mtb_card.buy %></td>
    <td><%= mtb_card.virtual_coin %></td>
    <td><%= mtb_card.vitory_token %></td>
    <td><%= link_to 'Show', mtb_card %></td>
    <td><%= link_to 'Edit', edit_mtb_card_path(mtb_card) %></td>
    <td><%= link_to 'Destroy', mtb_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
